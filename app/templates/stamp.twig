{% extends "base.twig" %}

{% block content %}

<div class="content-wrapper">
	<div class="content">

		<h1 class="content-head is-center">Make Time Certificate</h1>

		<div class="pure-g">
			<div class="pure-u-1-3"></div>
			<form enctype="multipart/form-data" action="" method="POST" class="pure-form stamp-form pure-u-1-3">
				<p>
					<label for="file">Select your file:</label>
					<input type="file" name="file" id="file" required>
				</p>
				<p>
					<button type="submit" class="pure-button pure-button-primary button-xlarge">Get Certificate</button>
				</p>
			</form>
		</div>

	</div>
</div>

{% endblock %}